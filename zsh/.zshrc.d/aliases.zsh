# Alias settings
alias py='python'
alias vs="code -r main.py"
alias test="pipenv run test"

# git
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --graph --name-status --pretty=format:"%C(red)%h %C(green)%an %C(Cyan)%ad %Creset%s %C(yellow)%d%Creset'
alias gd='git diff'
alias gb='git branch'

alias ls='lsd --color=auto'
alias lst='lsd -ltr --color=auto'
alias la='lsd -la --color=auto'
alias ll='lsd -l --color=auto'

alias mkdir='mkdir -p'
